{
  "compileOnSave": true,
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "downlevelIteration": true,
    "declaration": true,
    "declarationMap": true,
    "target": "es5",
    "lib": [ "es2015", "es2015.promise", "dom", "dom.iterable" ],
    "module": "commonjs",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [ "ts/*" ]
}
